{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es5",
    "module": "commonjs",
    "watch": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true
